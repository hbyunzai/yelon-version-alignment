  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["lib/**/*","index.ts"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
